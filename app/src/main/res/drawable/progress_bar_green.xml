<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:angle="90"
                android:startColor="@color/TextGreen"
            android:endColor="@color/TextGreen" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="20dp" />

                <gradient
                    android:angle="90"
                    android:endColor="#52857a"
                    android:startColor="#52857a"
                    />
            </shape>
        </clip>
    </item>

</layer-list>